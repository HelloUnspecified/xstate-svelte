{
  "name": "xstate-svelte",
  "version": "0.1.1",
  "description": "XState tools for Svelte",
  "keywords": [
    "state",
    "machine",
    "statechart",
    "scxml",
    "state",
    "graph",
    "svelte"
  ],
  "author": "Dmytro Mostovyi <djmakaron2009@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:distolma/xstate-svelte.git"
  },
  "scripts": {
    "lint": "eslint src/*.ts",
    "test": "yarn lint",
    "build": "tsc"
  },
  "peerDependencies": {
    "@xstate/fsm": "^1.3.0",
    "svelte": "^3.20.1",
    "xstate": "^4.8.0"
  },
  "devDependencies": {
    "@testing-library/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "@xstate/fsm": "^1.3.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "svelte": "^3.20.1",
    "typescript": "^3.8.3",
    "xstate": "^4.8.0"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  }
}
